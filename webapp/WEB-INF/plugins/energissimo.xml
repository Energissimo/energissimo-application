<?xml version="1.0" encoding="UTF-8"?>
<plug-in>
    <name>energissimo</name>
    <class>fr.paris.lutece.portal.service.plugin.PluginDefaultImplementation</class>
    <version>1.0.0</version>
    <documentation></documentation>
    <installation></installation>
    <changes></changes>
    <user-guide></user-guide>
    <description>energissimo.plugin.description</description>
    <provider>energissimo.plugin.provider</provider>
    <provider-url>https://github.com/Energissimo</provider-url>
    <icon-url>images/admin/skin/feature_default_icon.png</icon-url>
    <copyright>Copyright (c) 2017 Energissimo</copyright>
    <db-pool-required>1</db-pool-required>
    
    <core-version-dependency>
        <min-core-version>4.1.0</min-core-version>
        <max-core-version/>	
    </core-version-dependency>
    
    <!-- Specific CSS style sheets eventually used  -->
    <css-stylesheets>
         <css-stylesheet>energissimo/energissimo.css</css-stylesheet>
    </css-stylesheets>
    

    <!-- Admin features parameters -->
    <admin-features>
        <admin-feature>
            <feature-id>ENERGISSIMO_MANAGEMENT</feature-id>
            <feature-title>energissimo.adminFeature.ManageEnergissimo.name</feature-title>
            <feature-description>energissimo.adminFeature.ManageEnergissimo.description</feature-description>
            <feature-level>1</feature-level>
            <feature-url>jsp/admin/plugins/energissimo/ManageSuggestions.jsp</feature-url>
            <feature-icon-url></feature-icon-url>
      </admin-feature>
    </admin-features>    

    <!-- XPages parameters -->
    <applications>
        <application>
            <application-id>energissimo</application-id>
            <application-class>fr.paris.lutece.plugins.energissimo.web.EnergissimoApp</application-class>
        </application>
    </applications>

    <!-- Portlet parameters -->
    <portlets>
   </portlets>
</plug-in>